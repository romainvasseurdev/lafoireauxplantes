{% extends 'base.html.twig' %}

{% block body %}
<div class="container bg-light rounded flex" style="max-height: 200px;">
    <center><img src="/uploads/images/nouvelleAnnonce.png" alt="pas de chance" style="margin-top: -70px;"></center>
</div>

<div class="container mt-4 bg-light rounded" style="padding: 30px;margin-top: 1em;">
    {{ form_start(form) }}
        <div class="row">
            <div class="col-md-3">{{ form_row(form.title) }}</div>
            <div class="col-md-2">{{ form_row(form.category) }}</div>
            <div class="col-md-2">{{ form_row(form.posttype) }}</div>
            <div class="col-md-2">{{ form_row(form.price) }}</div>
            <div class="col-md-3" >{{ form_row(form.quantity) }}</div>
        </div>
        <div class="row">
            <div class="col-md-5">{{ form_row(form.dpt) }}</div>
            <div class="col-md-5">{{ form_row(form.city) }}</div>
            <div class="col-md-2">{{ form_row(form.postal) }}</div>
        </div>
        <div class="row">
            <div class="col-md-12">{{ form_row(form.description, {'attr': {'style': 'width: 100%; height: 400px'}}) }}</div>
        </div>
        <div class="row">
            <div class="col-md-1">
                <button class="btn btn-primary">Cr√©er</button>
            </div>
        </div>
    {{ form_end(form) }}
</div>

{% endblock %}